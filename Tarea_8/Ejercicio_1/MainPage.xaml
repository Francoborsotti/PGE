<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Ejercicio_1.MainPage"
    Title="Caluladora Segura">

    <VerticalStackLayout Padding="16" Spacing="12">
        <Label Text="Operaciones Complejas" FontAttributes="Bold" FontSize="20" />

        <Entry x:Name="Num1Entry" Placeholder="Número 1" Keyboard="Numeric" />
        <Entry x:Name="Num2Entry" Placeholder="Número 2" Keyboard="Numeric" />

        <Picker x:Name="OpPicker" Title="Operación">
            <Picker.Items>
                <x:String>Suma (+)</x:String>
                <x:String>Resta(-)</x:String>
                <x:String>Multiplicación (*)</x:String>
                <x:String>División (/)</x:String>
                <x:String>Potencia (a^b)</x:String>
                <x:String>Raiz (√a)</x:String>
            </Picker.Items>
        </Picker>

        <Button Text="Calcular" Clicked="OnCalcularCliked"/>
        <Label x:Name="ResultLabel" Text="Resultado: -" FontSize="18"/>

        <Button Text="Ver log de errores" Clicked="onVerLogClicked"/>
    </VerticalStackLayout>

</ContentPage>
