<Window x:Class="Ejercicio_3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ejercicio_3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="txtDesc" HorizontalAlignment="Left" Margin="323,39,0,0"
             TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtMonto" HorizontalAlignment="Left" Margin="323,93,0,0"
             TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        
        <ComboBox HorizontalAlignment="Left" Margin="323,125,0,0" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.823,2.342">
            <ComboBoxItem Content="Pesos Argentinos"/>
            <ComboBoxItem Content="Dolares"/>
            <ComboBoxItem Content="Euros"/>
        </ComboBox>
        
        <Button x:Name="btnAgregar" Content="Agregar" HorizontalAlignment="Left" Margin="321,152,0,0" VerticalAlignment="Top"/>

        <ListBox x:Name="listaGastos" Margin="12,177,12,177">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Descripcion}" Width="200"/>
                        <TextBlock Text="{Binding Monto, StringFormat=N2}" Width="100"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        
        <Button x:Name="btnConvertir" Content="Convertir" HorizontalAlignment="Left" Margin="321,280,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lResultado" Content="$$$" HorizontalAlignment="Left" Margin="323,305,0,0" VerticalAlignment="Top"/>
        <Label Content="Ingrese su categoria" HorizontalAlignment="Left" Margin="323,8,0,0" VerticalAlignment="Top"/>
        <Label Content="Valor" HorizontalAlignment="Left" Margin="323,62,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cboMonedaDestino" HorizontalAlignment="Left" Margin="400,280,0,0" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.823,2.342">
            <ComboBoxItem Content="Pesos Argentinos"/>
            <ComboBoxItem Content="Dolares"/>
            <ComboBoxItem Content="Euros"/>
        </ComboBox>
    </Grid>
</Window>
